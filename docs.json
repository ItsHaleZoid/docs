{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Asimov",
  "colors": {
    "primary": "#000000",
    "light": "#ffffff",
    "dark": "#000000",
    "background": {
      "dark": "#000000"
    }
  },
  "favicon": "/favicon.svg",
  "api": {
    "mdx": {
      "server": "https://asimov.mov/api",
      "auth": {
        "method": "bearer",
        "name": "Authorization"
      }
    },
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "javascript", "python"],
      "defaults": "required"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "main",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "API Reference",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "api-reference/introduction",
              "POST /sources/content/add",
              "POST /sources/content/search",
              "GET /sources/content/get",
              "GET /sources/content/get/tokens",
              "POST /sources/param/add",
              "GET /sources/param/get",
              "PUT /sources/param/manage",
              "DELETE /sources/param/manage",
              "POST /keys/create",
              "GET /keys/list",
              "GET /sources/stats",
              "GET /usage/status"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/content-management",
              "features/usage-limits",
              "features/parameters"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/mcp-integration"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "faq"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://asimov.mov/dashboard",
          "icon": "home"
        },
        {
          "anchor": "Email",
          "href": "mailto:hamza@asimov.mov",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/asimov-text-black.png",
    "dark": "/logo/asimov-text-white.png",
    "dimensions": {
      "width": 100,
      "height": 100
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hamza@asimov.mov"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://asimov.mov/dashboard"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/asimov-mov",
      "x": "https://x.com/ai_asimov"
    }
  }
}
